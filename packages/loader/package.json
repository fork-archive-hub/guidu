{
  "name": "@uidu/loader",
  "version": "1.0.0-beta.3",
  "license": "MIT",
  "description": "Inputs using Formsy",
  "main": "dist/uidu-inputs.js",
  "module": "lib/index.js",
  "jsnext:main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/uidu-org/uidu-ui-kit.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "lib",
    "styles"
  ],
  "scripts": {
    "dev": "webpack --config webpack.development.js --progress --colors --watch",
    "build": "npm run build:es",
    "build:umd": "webpack --config webpack.production.js",
    "build:es": "NODE_ENV=production cross-env BABEL_ENV=es babel src --out-dir lib",
    "lint": "eslint src/**; exit 0",
    "lint:watch": "esw -w src/**",
    "prepublish": "npm run build",
    "test": "bundlesize",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "start": "webpack-dev-server --open --config webpack.development.js --progress --colors --watch"
  },
  "author": "",
  "bundlesize": [
    {
      "path": "./dist/umd/*.js",
      "maxSize": "300 kB"
    }
  ],
  "dependencies": {
    "react-spinkit": "3.0.0"
  },
  "devDependencies": {
    "@uidu/docs": "^0.1.0"
  }
}
